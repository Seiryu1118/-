<h2>レビュー一覧</h2>
<table class="table table-bordered border-dark">
   <thead>
    <tr class="table-secondary">
      <th>レビューID</th>
      <th>お店</th>
      <th>メニュー</th>
      <th>点数</th>
      <th>いいね数</th>
      <th>コメント数</th>
      <th>公開日</th>
    </tr>
   </thead>
   <tbody>
     <% @review.each do |review| %>
     <tr>
        <td><%= review.id %></td>
        <td><%= link_to review.name,admin_review_path(review) %></td>
        <td><%= review.menu %></td>
        <td id= 'star<%= review.id %>' ></td>
        <td>いいね:<%= review.favorites.count %></td>
        <td>コメント数:<%= review.comments.count %></td>
        <td><%= review.updated_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <script>
       var elem = document.getElementById('star<%= review.id %>');
       var opt = {
        size     : 36,
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        readOnly: true,
        score: <%= review.rate %>
       };
        raty(elem,opt);
      </script>
     <% end %>
   </tbody>
  </table>
  <%= paginate @review %>