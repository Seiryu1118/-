<div class="container">
  <div class="row py-2">
    <div class="col-10">
      <h2>スープ編集画面</h2>
    </div>
  </div>
   <div class="row">
    <div class="col-8">
     <%= form_with model:@soup, url: admin_soup_path(@soup.id) do |f| %>
     <table>
      <td class="col-2 font-weight-bold"><%= f.label :name, "スープ名" %></td>
      <td class="col-2"><%= f.text_field :name %></td>
      <td class="col-4"><%= f.submit '変更を保存', class: "btn btn-success"%></td>
     </table>
     <% end %>
   </div>
  </div>