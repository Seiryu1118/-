<% if review.comments.present? %>
  <p>コメント件数：<%= review.comments.count %></p>
  <% review.comments.each do |comment| %>
  <%= comment.customer.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.content %>
  <% if comment.customer == current_customer%>
  <div>
   <%= link_to "削除", review_comment_path(review, comment), method: :delete, remote:true %>
   </div>
   <% end %>
   <% end %>
   <% else %>
     <p>コメントはまだありません</p>
   <% end %>