<h2>レビュー一覧</h2>
<table class="table table-bordered border-dark">
   <thead>
    <tr class="table-secondary">
      <th>お店</th>
      <th>メニュー</th>
      <th>分類</th>
      <th>スープ</th>
      <th>点数</th>
      <th>いいね数</th>
      <th>コメント数</th>
      <th>公開日</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
   </thead>
   <tbody>
     <% @review.each do |review| %>
     <tr>
        <td><%= link_to review.name,review_path(review) %></td>
        <td><%= review.menu %></td>
        <td><%= review.type.name %></td>
        <td><%= review.soup.name %></td>
        <td id= 'star<%= review.id %>' ></td>
        <td>いいね:<%= review.favorites.count %></td>
        <td>コメント数:<%= review.comments.count %></td>
         <% if (review.published?) %>
      　　<td><%= review.updated_at.strftime('%Y/%m/%d') %></td>
 　　　　　　<% else %>
       　 <td>下書き</td>
 　　　　　　<% end %>
        <td><%= link_to '表示する', edit_review_path(review), class: "btn btn-primary" %></td>
        <td><%= link_to '削除する', myreview_path(review), method: :delete, class: "btn btn-primary" %></td>
      </tr>
      <script>
       var elem = document.getElementById('star<%= review.id %>');
       var opt = {
        size     : 36,
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        readOnly: true,
        score: <%= review.rate %>
       };
        raty(elem,opt);
      </script>
     <% end %>
   </tbody>
  </table>
  <%= paginate @review %>