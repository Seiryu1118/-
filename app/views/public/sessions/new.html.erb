<div class="container">
 <div class="row">
  <div class="col-md-12">
   <h2 class="bg-light text-center w100">ラーメンレビューボックスログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <table class="table table-borderless text-center">
      <tbody>
       <tr>
        <th>メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "sample@example.com",size:"40" %></td>
       </tr>
       <tr>
        <th>パスワード</th>
        <td><%= f.password_field :password, autocomplete: "current-password",size:"40" %></td>
       </tr>
      </tbody>
     </table>
     <div class="row justify-content-center example">
       <%= f.submit "ログイン",class:"btn btn-primary center-block" %>
     </div>
    <% end %>
    <div class="row justify-content-center example">
      <%= render "public/shared/links" %>
    </div>
    <div class="row justify-content-center example">
     <%= link_to 'ゲストログイン', customers_guest_sign_in_path, class: "btn btn-secondary", method: :post %>
    </div>
  </div>
 </div>
</div>
